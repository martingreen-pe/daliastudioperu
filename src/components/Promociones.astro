---
import "../styles/promociones.css";
import WhatsAppButton from '../components/WhatsAppButton.astro';

// Datos de las promociones (pueden venir de un archivo JSON o una API)
const promotions = [
  {
    title: "Descuento en Uñas Acrílicas",
    description: "10% de descuento en tu primera aplicación de uñas acrílicas. ¡Este mes solo!",
    whatsappLink: "https://wa.me/51999888777?text=Quiero%20reservar%20para%20uñas%20acrílicas",
  },
  {
    title: "Promoción Extensiones Clásicas",
    description: "15% de descuento en extensiones de pestañas clásicas. ¡Reserva ya!",
    whatsappLink: "https://wa.me/51999888777?text=Quiero%20reservar%20para%20extensiones%20clásicas",
  },
  {
    title: "Laminado y Planchado de Cejas",
    description: "Descuentos en laminado y planchado de cejas. ¡Solo por tiempo limitado!",
    whatsappLink: "https://wa.me/51999888777?text=Quiero%20reservar%20para%20laminado%20o%20planchado%20de%20cejas",
  }
];
---
<section class="special-offers">
  <h2 class="special-offers__title">Promociones Especiales</h2>
  <div class="offers__grid">
    {promotions.map(promo => (
      <a href={promo.whatsappLink} target="_blank" class="offer-card">
        <h3 class="offer-card__title">{promo.title}</h3>
        <p class="offer-card__description">{promo.description}</p>
      </a>
    ))}
  </div>

  <!-- Botón de WhatsApp reutilizable -->
  <WhatsAppButton />
</section>
