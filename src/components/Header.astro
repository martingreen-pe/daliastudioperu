---
import "../styles/header.css";
---
<header class="header">
    <div class="header__logo">
      <a href="/"><img src="/images/logo-1.svg" alt="Dalia Studio logo" class="header__logo-image" /></a>
    </div>
    <nav class="header__nav" id="nav">
      <ul class="header__nav-list">
        <li><a href="/" class="header__nav-link">Home</a></li>
        <li><a href="/depilacion" class="header__nav-link">Depilación y Cejas</a></li>
        <li><a href="/pestanas" class="header__nav-link">Pestañas</a></li>
        <li><a href="/unas" class="header__nav-link">Uñas</a></li>
        <li><a href="/galeria" class="header__nav-link">Galeria de Trabajos</a></li>
        <li><a href="/blog" class="header__nav-link">Blog</a></li>
        <li><a href="/acerca" class="header__nav-link">Nosotros</a></li>
      </ul>
    </nav>
    <div class="hamburger" id="hamburger">
      <span class="hamburger__line"></span>
      <span class="hamburger__line"></span>
      <span class="hamburger__line"></span>
    </div>
  </header>
  

<!-- Menú overlay -->
<div class="overlay" id="overlay">
  <!-- Botón de cerrar (equis) -->
  <button class="overlay__close" id="close-overlay">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    
  </button>
  <nav class="overlay__nav">
    <ul class="overlay__nav-list">
      <li><a href="/" class="overlay__nav-link">Home</a></li>
      <li><a href="/unas" class="overlay__nav-link">Uñas</a></li>
      <li><a href="/pestanas" class="overlay__nav-link">Pestañas</a></li>
      <li><a href="/depilacion" class="overlay__nav-link">Depilación y Cejas</a></li>
      <li><a href="/galeria" class="overlay__nav-link">Galeria de Trabajos</a></li>
      <li><a href="/blog" class="overlay__nav-link">Blog</a></li>
      <li><a href="/acerca" class="overlay__nav-link">Nosotros</a></li>
    </ul>
  </nav>
</div>

<script>
  const hamburger = document.getElementById('hamburger');
  const overlay = document.getElementById('overlay');
  const closeOverlay = document.getElementById('close-overlay');

  hamburger.addEventListener('click', () => {
    overlay.classList.toggle('overlay--active');
    hamburger.classList.toggle('hamburger--active');
  });

  closeOverlay.addEventListener('click', () => {
    overlay.classList.remove('overlay--active');
    hamburger.classList.remove('hamburger--active');
  });
</script>
