---
import "../styles/pestanas.css";
import Layout from '../layouts/Layout.astro';

// Cargar el archivo JSON de técnicas de pestañas desde el directorio público
const servicesData = await Astro.glob('../../public/data/services.json');

// Filtrar tanto las extensiones de pestañas como el servicio de lifting de pestañas
const pestanasService = servicesData[0].services.find(service => service.servicio === 'Extensiones de Pestañas');
const liftingService = servicesData[0].services.find(service => service.servicio === 'Lifting de Pestañas');
---
<Layout>
  <section class="pestanas">
    <div class="hero">
      <h1 class="hero__title">Extensiones y Lifting de Pestañas</h1>
      <p class="hero__subtitle">Realza tu mirada con nuestras exclusivas técnicas de extensiones y lifting de pestañas</p>
    </div>

    <!-- Detalles del servicio de extensiones de pestañas -->
    <div class="service-details">
      <h2 class="details__title">Detalles del Servicio de Extensiones</h2>
      <p class="details__text"><strong>Duración:</strong> {pestanasService.duracion}</p>
      <p class="details__text">{pestanasService.detalles}</p>

      <h3 class="details__subtitle">Recomendaciones</h3>
      <p class="details__text"><strong>Recomendaciones:</strong> <span class="highlight">Evitar el uso de maquillaje o productos a base de aceite en las primeras 24 horas.</span> No mojar las pestañas durante ese tiempo. Los retoques se deben realizar entre <strong>15 y 20 días</strong>.</p>

      <h3 class="details__subtitle">Precauciones</h3>
      <p class="details__text"><strong>Precauciones:</strong> Asegúrate de no tener infecciones oculares ni alergias. Se recomienda acudir con los ojos completamente limpios y sin maquillaje antes de la cita. Si tienes piel sensible o alergias, consulta previamente a un especialista.</p>
    </div>

    <!-- Técnicas de extensiones de pestañas -->
    <div class="techniques">
      <h2 class="techniques__title">Técnicas de Extensiones</h2>
      <div class="techniques__grid">
        {pestanasService.tecnicas.map((technique) => (
          <div class="technique-card">
            <img src={technique.imagen} alt={technique.nombre} class="technique-card__image" />
            <h3 class="technique-card__title">{technique.nombre}</h3>
            <p class="technique-card__description">{technique.descripcion}</p>
            <p class="technique-card__price"><strong>Precio:</strong> {technique.precio}, <strong>Retoque:</strong> {technique.precioRetoque}</p>
            <p class="technique-card__clients"><strong>Clientes:</strong> {technique.clientes}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Servicio de lifting de pestañas -->
    <div class="lifting">
      <h2 class="lifting__title">Lifting de Pestañas</h2>
      <div class="lifting-card">
        <img src={liftingService.imagen} alt={liftingService.servicio} class="lifting-card__image" />
        <h3 class="lifting-card__title">{liftingService.servicio}</h3>
        <p class="lifting-card__details">{liftingService.detalles}</p>
        <p class="lifting-card__duration"><strong>Duración:</strong> {liftingService.duracion}</p>
        <p class="lifting-card__price"><strong>Precio:</strong> {liftingService.precio}</p>
        <p class="lifting-card__clients"><strong>Clientes:</strong> {liftingService.clientes}</p>
      </div>
    </div>

    <!-- Galería de trabajos -->
    <div class="gallery">
      <h2 class="gallery__title">Galería de Trabajos</h2>
      <div class="gallery__grid">
        <img src="/images/gallery/pestanas_1.jpg" alt="Trabajo 1" class="gallery__image" />
        <img src="/images/gallery/pestanas_2.jpg" alt="Trabajo 2" class="gallery__image" />
        <img src="/images/gallery/pestanas_3.jpg" alt="Trabajo 3" class="gallery__image" />
        <img src="/images/gallery/pestanas_4.jpg" alt="Trabajo 4" class="gallery__image" />
        <!-- Agrega más imágenes según lo necesario -->
      </div>
    </div>
  </section>
</Layout>
