---
export const prerender = true;

import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Función para obtener la URL de la imagen
function getImageUrl(post) {
  // Si el campo 'post.data.image' ya contiene una ruta completa, úsala tal cual
  if (post.data.image && post.data.image.startsWith('/images/posts-images/')) {
    return post.data.image;
  }
  
  // Si no, genera la ruta de la imagen con el slug
  if (post.data.image) {
    return `/images/posts-images/${post.slug}/${post.data.image}`;
  }
  
  return null;
}
---

<Layout title={post.data.title}>
  <section class="blog-post-section">
    <div class="blog-post-content">
      <header class="post-header">
        <h1 class="post-title">{post.data.title}</h1>
        {post.data.tags && (
          <div class="post-tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>

      {post.data.image && (
        <figure class="post-image">
          <img src={getImageUrl(post)} alt={post.data.title} />
        </figure>
      )}

      <article class="post-body">
        <Content />
      </article>
    </div>

    <WhatsAppButton />
  </section>

  <style>
    


@media (min-width: 768px) {
  .blog-post-section h2 {
    font-size: 2.5rem; /* Aumenta el tamaño en pantallas medianas */
  }
}

.blog-post-content {
  max-width: 800px; /* Ancho máximo */
  margin: 0 auto; /* Centramos el contenido */
  padding: 0; /* Sin padding para eliminar formato de tarjeta */
  background-color: transparent; /* Sin fondo */
  box-shadow: none; /* Sin sombras */
  border-radius: 0; /* Sin bordes redondeados */
}

/* Estilo del título del artículo */
.post-title {
  font-size: 2rem;
  font-weight: bold;
  text-align: left; /* Título alineado a la izquierda */
  /* color: var(--color-primary); */
  color: #2f1c6a;
  margin-bottom: 1rem;
}

/* Estilo de las etiquetas (tags) */
.post-tags {
  display: flex;
  justify-content: flex-start; /* Alineado a la izquierda */
  gap: 0.5rem;
  flex-wrap: wrap;
  margin-bottom: 1.5rem;
}

.tag {
  background-color: var(--color-secondary);
  color: white;
  padding: 0.3rem 0.8rem;
  border-radius: 20px;
  font-size: 0.85rem;
}

/* Imagen principal del artículo */
.post-image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  margin-bottom: 1.5rem;
  object-fit: cover;
  max-height: 400px; /* Ajuste de altura para que no ocupe tanto espacio */
}

/* Cuerpo del artículo */
.post-body {
  font-size: 1.1rem;
  line-height: 1.8;
  /*color: var(--color-text);*/
  color: #36344d;
  text-align: justify;
  margin-bottom: 2rem;
}

/* Bloques de citas o destacados */
.post-body blockquote {
  font-style: italic;
  margin: 2rem 0;
  padding: 1rem;
  border-left: 4px solid var(--color-primary);
  background-color: var(--color-background);
  color: var(--color-secondary);
}

/* Ajuste para pantallas medianas */
@media (min-width: 768px) {
  .post-title {
    font-size: 2.5rem;
  }

  .blog-post-section {
    padding: 3rem; /* Más padding en pantallas más grandes */
  }

  .post-image img {
    max-height: 500px; /* Mayor tamaño en pantallas medianas */
  }
}

/* Ajuste para pantallas grandes */
@media (min-width: 1024px) {
  .post-title {
    font-size: 3rem;
  }

  .post-image img {
    max-height: 600px; /* Ajuste en pantallas grandes */
  }
}


  </style>
</Layout>